@model List<Kitaplar>

<div class="container">
<div class="row pt-3 pb-4">
    <div>
        <h1>Kitaplar</h1>
    </div>
</div>
<table class="table-bordered table table-striped">
  <thead>
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Tanım</th>
        <th>Kitap Yazarı</th>
        <th>Kitap Yayınevi</th>
        <th>Kitap Fiyat</th>
        <th>Kitap Resim</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
  </thead>
  <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.KitapAdi</td>
            <td>@item.KitapTanitim</td>
            <td>@item.YazarAdi</td>
            <td>@item.YayineviAdi</td>
            <td>$@item.KitapFiyat</td>
            <td>
                <img src="@item.KitapResim" alt="Kitap Resmi" style="max-width: 100px; max-height: 100px;" />
            </td>
            <td>
              <a type="button" asp-controller="Kitaplar" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
            </td>
             <td>
               <a type="button" asp-controller="Kitaplar" asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
             </td>
        </tr>
        }
  </tbody>
</table>
<div class="row pt-3 pb-2">
    <div>
       <a asp-controller="Kitaplar" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">Yeni Kitap Ekle</a>
    </div>
</div>
</div>

