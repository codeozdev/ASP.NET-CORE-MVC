@model List<KitapTuru>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Türleri</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.KitapTurAdi</td>
            <td><a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@item.Id">Güncelle</a></td>
            <td><a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@item.Id">Sil</a></td>
        </tr>
    }
</table>
<a class="btn btn-lg btn-primary" asp-controller="KitapTuru" asp-action="Ekle">Kitap Türü Ekle</a>